<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sideNavigator"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:gravity="top"
    android:padding="8dp"
    android:layout_marginEnd="1dp"> <!-- 오른쪽 경계선 효과용 -->

    <!-- 상단 메뉴 (검색 + 항목들) -->
    <LinearLayout
        android:id="@+id/sideMenuTop"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="8dp"
        android:clickable="true">

        <!-- 검색창 -->
        <EditText
            android:id="@+id/etSearch"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="@string/Search"
            android:autofillHints="Document Name"
            android:drawableStart="@drawable/ic_search"
            android:drawablePadding="8dp"
            android:background="@drawable/text_field"
            android:paddingHorizontal="12dp"
            android:inputType="text"
            android:textColor="#333333"
            android:textColorHint="#999999"
            android:layout_marginBottom="16dp" />

        <!-- 문서 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="8dp"
            android:id="@+id/btnDocument"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground">

            <ImageButton
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_document"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Document"
                android:textSize="16sp"
                android:textColor="#333333"
                android:layout_marginStart="12dp"/>

        </LinearLayout>

        <!-- 휴지통 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="8dp"
            android:id="@+id/btnTrash"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_trash"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Trash"
                android:textSize="16sp"
                android:textColor="#333333"
                android:layout_marginStart="12dp"/>

        </LinearLayout>

        <!-- 음성 텍스트 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="8dp"
            android:id="@+id/btnSTT"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_bigstt"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/VoiceText"
                android:textSize="16sp"
                android:textColor="#333333"
                android:layout_marginStart="12dp"/>

        </LinearLayout>

        <!-- 구분선 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"
            android:layout_marginTop="8dp"/>

    </LinearLayout>

    <!-- 하단 버튼 메뉴 -->
    <LinearLayout
        android:id="@+id/bottomMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="8dp"
        android:paddingBottom="4dp">

        <ImageButton
            android:id="@+id/btnWrite"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_write"
            tools:ignore="ContentDescription" />

        <ImageButton
            android:id="@+id/btnSTT_under"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_stt"
            tools:ignore="ContentDescription" />

        <ImageButton
            android:id="@+id/btnSetting"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_setting"
            tools:ignore="ContentDescription" />
    </LinearLayout>
</LinearLayout>
