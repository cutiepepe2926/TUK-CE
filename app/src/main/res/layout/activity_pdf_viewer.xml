<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="false"
    android:clipChildren="false">

    <!-- 1) PDF + DrawingView -->
    <com.github.barteksc.pdfviewer.PDFView
        android:id="@+id/pdfView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.example.test_app.view.DrawingView
            android:id="@+id/drawingView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent" />
    </com.github.barteksc.pdfviewer.PDFView>

    <!-- 2) 하단 페이지 전환 화살표 -->
    <ImageButton
        android:id="@+id/prevPageButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="bottom|start"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/toolbar_ic_arrow_left"
        android:background="@drawable/bg_round" />

    <ImageButton
        android:id="@+id/nextPageButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="bottom|end"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/toolbar_ic_arrow_right"
        android:background="@drawable/bg_round" />

    <!-- 3) 상단 오버레이 컨테이너 -->
    <FrameLayout
        android:id="@+id/topOverlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:padding="16dp"
        android:clipToPadding="false"
        android:clipChildren="false">

        <!-- 3-1) 좌측 X(닫기) -->
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="start"
            android:src="@drawable/toolbar_ic_close"
            android:background="@drawable/bg_round" />

        <!-- 3-2) 중앙 툴바(rounded rect) -->
        <LinearLayout
            android:id="@+id/centerToolbar"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bg_round"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- 문서 열기 아이콘 -->
            <ImageButton
                android:id="@+id/btnOpenDoc"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:src="@drawable/toolbar_ic_rect"
                android:background="?attr/selectableItemBackgroundBorderless" />

            <!-- 펜 -->
            <ImageButton
                android:id="@+id/btnPen"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:src="@drawable/toolbar_ic_pen"
                android:background="?attr/selectableItemBackgroundBorderless" />

            <!-- 지우개 -->
            <ImageButton
                android:id="@+id/btnEraser"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:src="@drawable/toolbar_ic_eraser"
                android:background="?attr/selectableItemBackgroundBorderless" />

            <!-- 텍스트 -->
            <ImageButton
                android:id="@+id/btnText"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:src="@drawable/toolbar_ic_text"
                android:background="?attr/selectableItemBackgroundBorderless" />

            <!-- 손(필기 모드 토글) -->
            <ImageButton
                android:id="@+id/toggleModeButton"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:src="@drawable/toolbar_ic_hand"
                android:layout_margin="10dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:alpha="0.4" />

        </LinearLayout>

        <!-- 3) 펜 옵션 영역 -->
        <LinearLayout
            android:id="@+id/penOptionLayout"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal|top"
            android:layout_marginTop="55dp"
            android:visibility="gone"
            android:orientation="horizontal"
            android:background="@drawable/bg_round"

            android:padding="8dp"
            android:gravity="center_vertical">

            <View
                android:id="@+id/penThickness1"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_margin="10dp"
                android:background="@drawable/pen_dot"/>
            <View
                android:id="@+id/penThickness2"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_margin="10dp"
                android:background="@drawable/pen_dot"/>
            <View
                android:id="@+id/penThickness3"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_margin="10dp"
                android:background="@drawable/pen_dot"/>
            <View
                android:id="@+id/penThickness4"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="10dp"
                android:background="@drawable/pen_dot"/>
            <View
                android:id="@+id/penThickness5"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_margin="10dp"
                android:background="@drawable/pen_dot"/>

            <!-- 컬러 피커 -->
            <ImageButton
                android:id="@+id/penColorPicker"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="10dp"
                android:src="@drawable/ic_color_palette"
                android:background="?attr/selectableItemBackgroundBorderless"/>
        </LinearLayout>

    </FrameLayout>

    <!-- 4) 햄버거 눌렀을 때 펼쳐질 메뉴 -->
    <LinearLayout
        android:id="@+id/sideMenu"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|top"
        android:minWidth="50dp"
        android:minHeight="40dp"
        android:paddingBottom="8dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_round"
        android:padding="8dp">

        <!-- 1) 햄버거 토글 버튼 (항상 보임) -->
        <ImageButton
            android:id="@+id/btnMenu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/toolbar_ic_menu"
            android:background="?attr/selectableItemBackgroundBorderless" />

        <!-- 2) 숨겨진 메뉴 아이템들 (초기 GONE) -->
        <ImageButton
            android:id="@+id/btnRecord"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_record"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:visibility="gone"/>

        <ImageButton
            android:id="@+id/btnOcr"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:src="@drawable/toolbar_ic_ocr"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:visibility="gone"/>

        <ImageButton
            android:id="@+id/exportButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:src="@drawable/toolbar_ic_export"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:visibility="gone"/>

    </LinearLayout>
</FrameLayout>
