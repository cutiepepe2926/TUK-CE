<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:paddingStart="24dp"
    android:paddingEnd="24dp"
    android:paddingTop="24dp"
    android:paddingBottom="24dp">

    <!-- 닫기 버튼 -->
    <ImageView
        android:id="@+id/x"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_x"
        android:contentDescription="@string/closebutton"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- 로그인 입력 영역 -->
    <LinearLayout
        android:id="@+id/login_center"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/Text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ID"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical" />

        <!--아이디 입력 영역-->
        <EditText
            android:id="@+id/loginId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="ID"
            android:textSize="18sp"
            android:background="@drawable/text_field"
            android:hint="@string/InputID"
            android:padding="10dp"
            tools:ignore="TextFields" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/Text3"
                android:layout_width="0dp"
                android:layout_height="34dp"
                android:layout_weight="1"
                android:text="@string/Password"
                android:gravity="center_vertical" />

            <!--비밀번호 숨김 아이콘-->
            <TextView
                android:id="@+id/hide"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:background="@drawable/ic_hide"
                android:backgroundTint="#D8D8D8"
                android:contentDescription="@string/HidePasswordIcon" />

            <TextView
                android:id="@+id/Text4"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:text="@string/see"
                android:textSize="18sp"
                android:gravity="center" />
        </LinearLayout>

        <!--비밀번호 입력 영역-->
        <EditText
            android:id="@+id/loginPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="Password"
            android:textSize="18sp"
            android:background="@drawable/text_field"
            android:hint="@string/writePassword"
            android:padding="10dp"
            tools:ignore="TextFields" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <!--비밀번호 기억 체크박스-->
            <CheckBox
                android:id="@+id/remember_passwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/Text5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rememberPassword"
                android:textStyle="bold"
                android:layout_marginStart="8dp"
                android:gravity="center_vertical" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="25dp" />

        <!--로그인 버튼-->
        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="#38C333"
            android:text="@string/login"
            android:textStyle="bold"
            android:textSize="16sp"
            tools:ignore="TouchTargetSizeCheck" />

        <!--비밀번호 찾기 버튼-->
        <TextView
            android:id="@+id/alread_have"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/findPassword"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="16dp" />

        <!--회원가입 페이지 이동 버튼-->
        <TextView
            android:id="@+id/btnSignup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/register"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="8dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
