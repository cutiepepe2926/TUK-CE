<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="24dp">

    <!-- 닫기 버튼 -->
    <ImageView
        android:id="@+id/x"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_x"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="ContentDescription" />

    <!-- 회원가입 전체 묶음 (중앙 정렬용) -->
    <LinearLayout
        android:id="@+id/signupContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 제목 -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/register"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <!-- 로그인 링크 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/accountText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/alreayIDexists"
                android:textColor="#757575"
                android:textSize="14sp" />

            <!--로그인 페이지 이동 버튼-->
            <TextView
                android:id="@+id/backtologin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login"
                android:textSize="14sp"
                android:textColor="#4285F4"
                android:textStyle="bold" />
        </LinearLayout>


        <!-- 입력 폼 -->
        <LinearLayout
            android:id="@+id/formContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="24dp">

            <!-- 아이디 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ID"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_marginTop="8dp" />

            <!--아이디 입력 영역-->
            <EditText
                android:id="@+id/signupId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/text_field"
                android:hint="@string/writeID"
                android:padding="12dp"
                android:textColorHint="#757575"
                android:textSize="16sp"
                tools:ignore="Autofill,TextFields,VisualLintTextFieldSize" />

            <!-- 이메일 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/email"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_marginTop="16dp" />

            <!--이메일 입력 영역-->
            <EditText
                android:id="@+id/signupEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/text_field"
                android:hint="@string/writeEmail"
                android:padding="12dp"
                android:textColorHint="#757575"
                android:textSize="16sp"
                tools:ignore="Autofill,TextFields,VisualLintTextFieldSize" />


            <!-- 비밀번호 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/Text3"
                    android:layout_width="0dp"
                    android:layout_height="34dp"
                    android:layout_weight="1"
                    android:text="@string/Password"
                    android:gravity="center_vertical" />

                <!--비밀번호 숨김 아이콘-->
                <TextView
                    android:id="@+id/hide"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:background="@drawable/ic_hide"
                    android:backgroundTint="#D8D8D8" />

                <TextView
                    android:id="@+id/Text4"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:gravity="center"
                    android:text="@string/see"
                    android:textSize="18sp"
                    tools:ignore="TextSizeCheck" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!--비밀번호 입력 영역-->
                <EditText
                    android:id="@+id/signupPassword"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/text_field"
                    android:hint="@string/writePassword"
                    android:inputType="textPassword"
                    android:padding="12dp"
                    android:textColorHint="#757575"
                    android:textSize="16sp"
                    tools:ignore="Autofill,VisualLintTextFieldSize" />

            </LinearLayout>

        </LinearLayout>

        <!-- 회원가입 버튼 -->
        <Button
            android:id="@+id/btnSignup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:backgroundTint="#38C333"
            android:enabled="false"
            android:text="@string/register"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            tools:ignore="DuplicateSpeakableTextCheck,VisualLintButtonSize" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
