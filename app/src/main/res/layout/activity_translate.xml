<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/translateLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 카드 형태로 전체 UI 감싸기 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="24dp"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:backgroundTint="#E8E8E8">

                <!-- 텍스트 입력 영역 -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/write_translate_sentence"
                    app:boxBackgroundMode="outline"
                    app:boxCornerRadiusTopStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusBottomEnd="8dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etInputText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="100dp"
                        android:inputType="textMultiLine"
                        android:importantForAutofill="no"
                        android:maxLines="6"
                        android:background="#E8E8E8" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- 번역 버튼 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSendToServer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/translate"
                    android:textColor="@color/black"
                    android:backgroundTint="#38C333" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 결과 표시 박스 -->
        <TextView
            android:id="@+id/tvResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EEEEEE"
            android:text="@string/translate_result_will_display"
            android:padding="16dp"
            android:textSize="16sp"
            android:textColor="#212121"
            android:minHeight="100dp"
            android:gravity="top"
            android:layout_marginBottom="24dp" />

        <!-- 로딩 UI -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <TextView
                android:id="@+id/loadingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/now_loading"
                android:visibility="gone"
                android:padding="8dp"
                android:textColor="#666666" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
