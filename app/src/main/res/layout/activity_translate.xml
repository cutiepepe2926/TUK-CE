<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- 툴바 또는 햄버거 버튼 -->
            <ImageButton
                android:id="@+id/btnLeftSideNavigator"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:importantForAccessibility="no"
                android:scaleType="center"
                android:src="@drawable/ic_left_side_button"
                android:background="@color/white"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:paddingTop="7dp"/>

            <!-- 중간 빈 공간 -->
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <!-- 오른쪽 버튼 (프로필) -->
            <ImageButton
                android:id="@+id/btnProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:importantForAccessibility="no"
                android:src="@drawable/ic_profile"
                android:scaleType="center"
                android:layout_gravity="end"
                android:background="@color/white"
                android:paddingStart="7dp"
                android:paddingEnd="7dp"
                android:paddingTop="7dp"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#A8A8A8"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="4dp" />

        <!-- 카드 형태로 전체 UI 감싸기 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="24dp"
            android:padding="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:backgroundTint="#E8E8E8">

                <!-- 텍스트 입력 영역 -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/write_translate_sentence"
                    app:boxBackgroundMode="outline"
                    app:boxCornerRadiusTopStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusBottomEnd="8dp">

                    <!-- 텍스트 입력 영역 -->
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etInputText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="100dp"
                        android:inputType="textMultiLine"
                        android:importantForAutofill="no"
                        android:maxLines="20"
                        android:background="#E8E8E8"
                        tools:ignore="VisualLintTextFieldSize" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- 번역 버튼 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSendToServer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/translate"
                    android:textColor="@color/black"
                    android:backgroundTint="#38C333"
                    tools:ignore="VisualLintButtonSize" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 결과 표시 박스 -->
        <TextView
            android:id="@+id/tvResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EEEEEE"
            android:text="@string/translate_result_will_display"
            android:padding="16dp"
            android:textSize="16sp"
            android:textColor="#212121"
            android:minHeight="100dp"
            android:gravity="top"
            android:layout_marginBottom="24dp" />

        <!-- 복사 버튼 -->
        <Button
            android:id="@+id/btnCopy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/copy"
            android:textColor="@color/black"
            android:layout_marginTop="16dp"
            android:backgroundTint="#38C333"/>

        <!-- 로딩 UI -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <TextView
                android:id="@+id/loadingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/now_loading"
                android:visibility="gone"
                android:padding="8dp"
                android:textColor="#666666" />
        </LinearLayout>
    </LinearLayout>

    <!-- 왼쪽 네비게이션 뷰 -->
    <LinearLayout
        android:id="@+id/sideMenu"
        android:layout_width="260dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:orientation="vertical"
        android:background="#FFFFFF"
        tools:ignore="VisualLintBounds">

        <include layout="@layout/activity_main_leftside"/>
    </LinearLayout>
</androidx.drawerlayout.widget.DrawerLayout>
