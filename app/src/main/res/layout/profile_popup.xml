<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profilePopup"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="24dp"
    android:background="@drawable/profile_popup_background"
    android:layout_gravity="end|top">

    <!-- 닫기 버튼 (오른쪽 상단) -->
    <ImageButton
        android:id="@+id/btnClose"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="4dp"
        android:background="@drawable/circle_gray_background"
        android:scaleType="center"
        android:src="@drawable/ic_x"
        tools:ignore="ContentDescription,TouchTargetSizeCheck,SpeakableTextPresentCheck" />

    <!-- 프로필 아이콘 -->
    <ImageView
        android:id="@+id/profileIcon"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/ic_big_profile"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="#D9D9D9"
        android:scaleType="centerInside"
        android:padding="12dp"
        android:layout_marginEnd="16dp"
        tools:ignore="ContentDescription" />

    <!-- ID 텍스트 -->
    <TextView
        android:id="@+id/userIdText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ID"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_toEndOf="@id/profileIcon"
        android:layout_alignTop="@id/profileIcon"
        android:gravity="center"
        android:layout_below="@id/btnClose"
        android:layout_marginStart="42dp"/>

    <!-- 로그아웃 버튼 -->
    <android.widget.Button
        android:id="@+id/btnLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/logout"
        android:textSize="16sp"
        android:textColor="#000000"
        android:background="@drawable/rounded_gray_button"
        android:layout_toEndOf="@id/profileIcon"
        android:layout_below="@id/userIdText"
        android:layout_marginTop="24dp"
        android:layout_marginStart="25dp"/>
</RelativeLayout>
